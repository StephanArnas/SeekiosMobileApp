<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">
    <TextView
        android:id="@+id/textView_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/parameter_popupPhoneCountry"
        android:textSize="18dp"
        android:textColor="@android:color/secondary_text_light" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_title"
        android:hint="@string/parameter_popupPhoneSearch"
        android:singleLine="true"
        android:textSize="18dp"
        android:textColor="@android:color/primary_text_light_nodisable"
        android:id="@+id/editText_search" />
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/editText_search"
        android:dividerHeight="2dp"
        android:id="@+id/recycler_countryDialog" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/parameter_popupPhoneNoResult"
        android:visibility="gone"
        android:textColor="@color/textColorContent"
        android:id="@+id/textView_noresult" />
</RelativeLayout>