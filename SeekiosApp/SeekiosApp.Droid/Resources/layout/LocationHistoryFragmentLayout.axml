        android:layout_marginTop="@dimen/mapBase_creditCircleOverflow"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:rowCount="2"
        android:visibility="visible"
        android:id="@+id/locHistory_locSliderContainer">
