<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/whiteroundedpopupbackground"
    android:orientation="vertical"
    android:id="@+id/mainLayout">
  <!-- REFRESH TEXTVIEW -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/popupSpendCreditsTitle"
      android:textColor="#333333"
      android:textStyle="bold"
      android:textSize="20dp"
      android:layout_marginTop="@dimen/marginS"
      android:id="@+id/popupRefreshinProgress_title"
      android:gravity="center"
      android:layout_gravity="center_horizontal" />
  <!-- STEP TEXTVIEW -->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/popupSpendCreditsText"
      android:textColor="#999999"
      android:textSize="13dp"
      android:maxLines="25"
      android:scrollbars="vertical"
      android:id="@+id/popupCreditCouts_Text"
      android:layout_marginTop="@dimen/marginXS"
      android:layout_gravity="center_vertical|left"
      android:layout_marginLeft="@dimen/marginXS"
      android:layout_marginRight="@dimen/marginXS" />

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/popupSpendCredits_newAmmount"
      android:textColor="#999999"
      android:layout_below="@id/popupCreditCouts_Text"
      android:textSize="13dp"
      android:maxLines="25"
      android:scrollbars="vertical"
      android:id="@+id/popupCreditCouts_Text2"
      android:layout_marginTop="@dimen/marginXS"
      android:layout_gravity="center_vertical"
      android:layout_marginLeft="@dimen/marginXS"
      android:layout_marginRight="@dimen/marginXS" />

  <View style="@style/View"
      android:layout_marginTop="@dimen/marginXS" />
</LinearLayout>

